                                                    <TextBlock Text="{Binding Uptime}" FontSize="12" Foreground="#A0A0A0"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Loading Spinner (if starting) -->
                                            <Grid Width="36" Height="36" Margin="0,0,4,0"
                                                  Visibility="{Binding IsStarting, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Ellipse Width="20" Height="20" 
                                                         Stroke="#f39c12" 
                                                         StrokeThickness="2"
                                                         StrokeDashArray="12,6"/>
                                                <Ellipse Width="20" Height="20" 
                                                         Stroke="#f39c12" 
                                                         StrokeThickness="2"
                                                         StrokeDashArray="12,6"
                                                         RenderTransformOrigin="0.5,0.5">
                                                    <Ellipse.RenderTransform>
                                                        <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                                                    </Ellipse.RenderTransform>
                                                    <Ellipse.Triggers>
                                                        <EventTrigger RoutedEvent="Loaded">
                                                            <BeginStoryboard>
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                                                   Storyboard.TargetProperty="Angle"
                                                                                   From="0" To="360" Duration="0:0:1"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Ellipse.Triggers>
                                                </Ellipse>
                                            </Grid>

                                            <!-- Copy Button -->
                                            <Button ToolTip="Â§çÂà∂ URL"
                                                    Click="CopyButton_Click"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    IsEnabled="{Binding CanCopyUrl}"
                                                    Margin="0,0,4,0">
                                                <TextBlock Text="üìã" FontSize="16"/>
                                            </Button>

                                            <!-- Open in Browser Button -->
                                            <Button ToolTip="Âú®ÊµèËßàÂô®‰∏≠ÊâìÂºÄ"
                                                    Click="OpenButton_Click"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    IsEnabled="{Binding CanOpenUrl}"
                                                    Margin="0,0,4,0">
                                                <TextBlock Text="üåê" FontSize="16"/>
                                            </Button>

                                            <!-- Restart Button -->
                                            <Button ToolTip="ÈáçÊñ∞ÁîüÊàê"
                                                    Click="RestartButton_Click"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    Background="#f39c12"
                                                    Margin="0,0,4,0">
                                                <TextBlock Text="üîÑ" FontSize="16"/>
                                            </Button>

                                            <!-- Stop Button -->
                                            <Button ToolTip="ÂÅúÊ≠¢ÈößÈÅì"
                                                    Click="StopButton_Click"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    Background="#e74c3c">
                                                <TextBlock Text="‚úï" FontSize="16"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyState" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="‚òÅ" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,16" Opacity="0.3" Foreground="#F4AB3A"/>
                <TextBlock Text="Êó†Ê¥ªÂä®ÈößÈÅì" FontSize="20" Foreground="#A0A0A0" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Text="‰ªéÁ´ØÂè£ÂàóË°®ÂêØÂä®ÈößÈÅì‰ª•ÂàõÂª∫ÂÖ¨ÂÖ± URL" 
                           FontSize="13" 
                           Foreground="#808080" 
                           HorizontalAlignment="Center" 
                           Margin="0,8,0,16"
                           TextAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" 
                           FontSize="12" 
                           Foreground="#606060" 
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"
                           MaxWidth="400">
                    üí° ÊèêÁ§∫ÔºöCloudflare ÈößÈÅìÈÄöËøáËá™Âä® HTTPS ‰ΩøÊÇ®ÁöÑÊú¨Âú∞‰∏ªÊú∫Á´ØÂè£ÂèØ‰ªé‰∫íËÅîÁΩëÁöÑ‰ªª‰Ωï‰ΩçÁΩÆËÆøÈóÆ
                </TextBlock>
            </StackPanel>

            <!-- Loading State -->
            <StackPanel x:Name="LoadingState" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Visibility="{Binding IsInitializing, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="‚òÅ" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,16" Opacity="0.3" Foreground="#F4AB3A"/>
                <TextBlock Text="Ê≠£Âú®Âä†ËΩΩ..." FontSize="20" Foreground="#A0A0A0" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
                    <Ellipse Width="20" Height="20" 
                             Stroke="#f39c12" 
                             StrokeThickness="2"
                             StrokeDashArray="12,6"
                             Margin="0,0,8,0">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="LoadingSpinner" CenterX="10" CenterY="10"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Ellipse.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingSpinner"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <TextBlock Text="Ê≠£Âú®ÊÅ¢Â§çÈößÈÅìËøûÊé•" FontSize="13" Foreground="#808080"/>
                </StackPanel>
            </StackPanel>

            <!-- Refreshing State -->
            <StackPanel x:Name="RefreshingState" 
