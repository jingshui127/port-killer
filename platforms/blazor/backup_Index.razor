@code {
    private List<PortInfo> _ports = new();
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadPortsAsync();
    }

    private async Task LoadPortsAsync()
    {
        _isLoading = true;
        StateHasChanged();
        
        try
        {
            await Task.Delay(500);
            _ports = PortScanner.GetPorts();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading ports: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshPorts()
    {
        _isLoading = true;
        StateHasChanged();
        
        try
        {
            await PortScanner.RefreshPortsAsync();
            _ports = PortScanner.GetPorts();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error refreshing ports: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task KillPort(int port)
    {
        PortScanner.KillPort(port);
        _ports = PortScanner.GetPorts();
        StateHasChanged();
    }

    private void ToggleFavorite(int port)
    {
        PortScanner.ToggleFavorite(port);
        var portInfo = _ports.FirstOrDefault(p => p.Port == port);
        if (portInfo != null)
        {
            portInfo.IsFavorite = !portInfo.IsFavorite;
        }
        StateHasChanged();
    }

    private void ToggleWatch(int port)
    {
        PortScanner.ToggleWatch(port);
        var portInfo = _ports.FirstOrDefault(p => p.Port == port);
        if (portInfo != null)
        {
            portInfo.IsWatched = !portInfo.IsWatched;
        }
        StateHasChanged();
    }
}
